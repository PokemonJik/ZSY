<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background5"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="#2A4CB6">

        <ImageButton
            android:id="@+id/gr4"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:background="@android:color/transparent"
            android:padding="15dp"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_title_back"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/gr4"
            android:gravity="center_vertical"
            android:text="房源选项"
            android:textColor="@android:color/white"
            android:textSize="20sp"/>

        <ImageButton
            android:id="@+id/news"
            android:scaleType="fitCenter"
            android:padding="13dp"
            android:layout_marginRight="10dp"
            android:background="@android:color/transparent"
            android:layout_alignParentRight="true"
            android:src="@drawable/news"
            android:layout_width="55dp"
            android:layout_height="55dp"/>
    </RelativeLayout>

    <TextView
        android:layout_marginTop="50dp"
        android:textSize="22sp"
        android:textColor="@android:color/black"
        android:text="找舍友app"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_marginTop="50dp"
        android:textColor="@android:color/black"
        android:text="您好！，欢迎来到房源界面。"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <Button
        android:id="@+id/button7"
        android:textColor="@android:color/white"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        style="?android:attr/borderlessButtonStyle"
        android:background="@drawable/blue"
        android:layout_marginTop="50dp"
        android:text="房源发布"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <Button
        android:id="@+id/button8"
        android:textColor="@android:color/white"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="15dp"
        style="?android:attr/borderlessButtonStyle"
        android:text="房间搜索"
        android:background="@drawable/pink"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <Button
        android:id="@+id/button9"
        android:textColor="@android:color/white"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="15dp"
        style="?android:attr/borderlessButtonStyle"
        android:text="我的发布"
        android:background="@drawable/yellow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_marginTop="35dp"
        android:textSize="17sp"
        android:textColor="@android:color/black"
        android:text="重要提示"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:textColor="#CECECE"
        android:layout_marginTop="5dp"
        android:text="请不要泄露个人或他人资料，一旦\n        用户举报，彻底列入黑名单！"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:layout_marginTop="25dp"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:text="关注微信:"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>
        <TextView
            android:text="pokermon_kai"
            android:textColor="#38AE3E"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>
        <TextView
            android:text="实时沟通反馈信息"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>
    </LinearLayout>
</LinearLayout>