<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <Button
        android:id="@+id/gr3"
        android:layout_width="38dp"
        android:layout_height="39dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:background="@mipmap/back"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.058"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.063" />

    <TextView
    android:id="@+id/T1"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="房间名称"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintLeft_toLeftOf="parent"
    android:layout_marginTop="150dp"
    android:layout_marginLeft="15dp"
    />

    <EditText
        android:id="@+id/E1"
        android:layout_width="60mm"
        android:layout_height="60dp"
        android:layout_marginLeft="4dp"
        android:inputType="date"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/T1" />
    <TextView
        android:id="@+id/T2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="租房地点"
        app:layout_constraintTop_toBottomOf="@id/E1"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp"
        />
    <EditText
        android:id="@+id/E2"
        android:layout_width="60mm"
        android:layout_height="60dp"
        android:inputType="date"
        app:layout_constraintTop_toTopOf="@+id/T2"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="5dp"
        />
    <TextView
        android:id="@+id/T3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="房间介绍"
        app:layout_constraintTop_toBottomOf="@id/E2"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp"
        />
    <EditText
        android:id="@+id/E3"
        android:layout_width="60mm"
        android:layout_height="60dp"
        android:inputType="date"
        app:layout_constraintTop_toTopOf="@+id/T3"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="5dp"
        />
    <TextView
        android:id="@+id/T4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="舍友需求"
        app:layout_constraintTop_toBottomOf="@id/E3"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp"
        />
    <EditText
        android:id="@+id/E4"
        android:layout_width="60mm"
        android:layout_height="60dp"
        android:inputType="date"
        app:layout_constraintTop_toTopOf="@+id/T4"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="5dp"
        />
    <Button
        android:id="@+id/B1"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:background="#000066"
        app:layout_constraintTop_toBottomOf="@id/E4"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:text="选择图片并发布信息"
        android:textColor="#ffffff"
        android:layout_marginTop="30dp"
        />

</android.support.constraint.ConstraintLayout>